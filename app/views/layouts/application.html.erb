<!DOCTYPE html>
<html>
  <head>
    <title>ExamSbaixas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-inverse">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				</button>
				<%= link_to "Joe's Pizza", root_path, :class => 'navbar-brand' %>
			</div>

			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<% if customer_signed_in? %>
						<li>
							<%= current_user.nickname %>
						</li>
						<li><%= link_to "Sign out", destroy_customer_session_path, :method => :delete %></li>
					<% else %>
						<li><%= link_to('Sign in', new_customer_session_path) %></li>
						<li><%= link_to('Sign up', new_customer_registration_path) %></li>
					<% end %>
				</ul>
			</div><!--/.nav-collapse -->
		</div><!--/.container-fluid -->

	</nav>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
